{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "size": "lerna run size",
    "fix": "lerna run fix",
    "test": "lerna run test",
    "proto": "lerna run proto",
    "doc": "lerna run doc"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lerna": "^6.0.1",
    "lint-staged": "^13.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.{ts,json,conf*.*js}": [
      "prettier --write"
    ],
    "./*.*js": [
      "prettier --write"
    ]
  }
}
